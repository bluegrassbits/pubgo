{{- define "styleCSS" -}}
:root {
  --background-color: {{ .BackgroundColor }};
  --text-color: {{ .TextColor }};
  --main-color: {{ .MainColor }};
  --accent-color: {{ .AccentColor }};
  --font-family: {{ .FontFamily }};
}

[data-theme="dark"] {
  --background-color: {{ .TextColor }};
  --text-color: {{ .BackgroundColor }};
  --main-color: {{ .AccentColor }};
  --accent-color: {{ .MainColor }};
}

* {
  box-sizing: border-box;
}

html {
  height: 100%;
  background: var(--background-color);
  color: var(--text-color);
  font-family: var(--font-family);
}

p img {
  width: 100%;
}

ul li {
    padding: 4px;
}

body {
  margin: 0;
  padding: 0;
  height: 100%;
  background: var(--background-color) !important;
  color: var(--text-color) !important;
  position: relative;
}

header {
  padding: 16px;
  border-bottom: 1px solid var(--accent-color);
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between;
}

header a {
  font-weight: bold;
  color: var(--text-color);
  cursor: pointer;
  text-decoration: none;
}

a.logo {
  display: flex;
  align-items: center;
}

footer {
  height: 3em;
  gap: 1em;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}

nav {
  display: flex;
  gap: 16px;
  justify-content: space-between;
  align-items: center;
}

nav a.page {
  font-size: 1.2em;
  font-weight: normal;
  line-height: 1.2em;
  border: 1px solid transparent;
  padding: 8px;
}

nav a.page:hover,nav a.page.active {
  border-bottom: 1px solid var(--text-color);
}

a {
  color: var(--accent-color);
  font-weight: bold;
  cursor: pointer;
}

.entries-list ul {
  list-style: none;
}

.entries-list li {
}

main {
  min-height: 100%;
}

#header-logo {
  display: flex;
  align-items: center;
  gap: 8px;
}

#header-logo h2 {
  margin: 0;
  color: var(--accent-color);
}

.content-container {
  width: 100%;
  max-width: 60rem;
  margin: 1em auto;
}

.content {
  margin: auto;
  width: 100%;
}

.content-body {
  font-size: 16px;
  padding: 1em;
}

.content-body nav ul {
  list-style-type: none;
  padding-left: 0;
}

.content-body nav ul ul {
  list-style: inside;
  list-style-type: square;
}

.content-body nav ul ul ul {
  list-style: inside;
  padding-left: 2em;
  list-style-type: disc;
}

.content-body nav ul ul ul ul {
  list-style: inside;
  padding-left: 2em;
  list-style-type: disc;
}

.content-body h1, h2, h3, h4 {
}

.content-body p {
}

.content-body table {
  text-align: left;
  width: 100%;
  border-collapse:collapse;
  border-radius: 4px 4px 0 0;
}

.content-body table td,
  .content-body  table th {
  padding: 0.5em;
}

.content-body table tr {
  border-bottom: 1px solid var(--accent-color);
}

.content-body table thead {
  border-radius: 4px 4px 0 0;
}

.content-body table thead th {
  font-weight: bold;
}

.content-body table tfoot {
  font-weight: bold;
}

.content-header {
  text-align: right;
}

.content-header p {
  height: 1em;
}

.content-details {
  padding: 1em;
}

.entries-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 1em;
  border-radius: 4px;
}

.entries-list > ul > li:last-child {
  border: none;
}

.entries-list a {
  color: var(--accent-color);
}

#current-content {
  width: 100%;
  border-radius: 4px;
  margin: 0 auto;
}

p.date {
  font-size: 0.8em;
}

.hero {
  margin-bottom: 1em;
  min-height: 17em;
  padding: 2em;
  display: flex;
  align-items: center;
  align-content: center;
  position: relative;
  justify-content: center;
  flex-direction: column;
}

h1.hero-content {
font-size: 4em;
}

.hero-image {
text-align-last: center;
}

.hero-image img {
width: 75%;
}

.commentbox {
margin-top: 36px;
}

.commentbox button {
background: var(--main-color) !important;
color: var(--text-color) !important;
}

#hamburger {
display: none;
}

.htmx-indicator {
  display: none;
}

@media only screen and (max-width: 770px) {
  .content {
    flex-direction: column;
    margin: 0;
  }

  .content-container {
    margin: 0;
  }

  .hero {
    margin: 0;
  }

  .content-body {
    padding: 1em;
  }

  table {
    font-size: 0.75em
  }

  pre {
    white-space: pre-wrap;
    font-size: 0.75em;
  }

  #header-menu {
    display: none;
  }

  #hamburger {
    display: flex;
    cursor: pointer;
    height: 100%;
    flex-direction: column;
    justify-content: space-evenly;
  }

  details summary::-webkit-details-marker {
    display:none;
  }

  #hamburger span {
    display: block;
    height: 1px;
    background: var(--accent-color);
    transition: 0.3s;
  }

  .hamburger-wrap {
    height: 2em;
    width: 2em;
    border: 1px solid var(--accent);
    border-radius: 4px;
    padding: 5px;
  }

  .hamburger-wrap .menu-items {
    display: flex;
    flex-direction: column;
    position: absolute;
    right: 0;
    width: 100%;
    top: 4em;
    z-index: 1;
    background: var(--main-color);
    padding: 1em;
    text-align: right;
  }

  .hamburger-wrap .menu-items a {
    color: var(--background-color);
    font-weight: normal;
  }
}
{{- end -}}
